class Solution 
{
    public int[] twoSum (int[] nums, int target) 
    {
        //Creation of variable "i" loop
        for (int i = 0; i < nums.length; i++)
        {
            //Creation of variable "j" loop
            for (int j = i + 1; j < nums.length; j++)
            {
                //Creation of a condition to meet up the target
                if (nums[i] + nums[j] == target) 
                {
                    return new int[] {i, j};
                }
            }

        }
        return nums;
    }   
}
